<div class="comment-new-wrapper">
	<div class="container">
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<h1 class="text-center">コメントを追加する</h1>

				<%= form_for [@topic, @comment], url: topic_comments_path do |f| %>
				  <div class="form-group">
				  	<%= f.label :body %>
				  	<%= f.text_area :body, class: 'form-control' %>
				  	
				  </div>
				  <%= f.submit 'コメントする', class: 'btn btn-black btn-block' %>
				<% end %>
				
			</div>
		</div>
	</div>
</div>  